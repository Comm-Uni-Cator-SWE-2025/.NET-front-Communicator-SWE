<Window x:Class="MeetAnalyticsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MeetAnalyticsApp.ViewModels"
        Title="Meet Analytics" Height="450" Width="650"
        Background="#f4f6f9"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">

        <StackPanel Orientation="Vertical">

            <!-- Title -->
            <TextBlock Text="Meet Analytics Dashboard"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0 0 0 20"/>

            <!-- Users Present Card -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0 0 0 15">
                <StackPanel>
                    <TextBlock Text="Users Present"
                               FontSize="18" FontWeight="Bold" Foreground="#444"/>
                    <TextBlock Text="{Binding MeetStats.UsersPresent}"
                               FontSize="24" FontWeight="SemiBold" Foreground="#2979ff"/>
                </StackPanel>
            </Border>

            <!-- Users Logged Out Card -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0 0 0 15">
                <StackPanel>
                    <TextBlock Text="Users Logged Out"
                               FontSize="18" FontWeight="Bold" Foreground="#444"/>
                    <TextBlock Text="{Binding MeetStats.UsersLoggedOut}"
                               FontSize="24" FontWeight="SemiBold" Foreground="#ff5252"/>
                </StackPanel>
            </Border>

            <!-- Previous Meeting Summary -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="Previous Meeting Summary"
                               FontSize="18" FontWeight="Bold" Foreground="#444"/>
                    <TextBlock Text="{Binding MeetStats.PreviousSummary}"
                               TextWrapping="Wrap"
                               FontSize="16"
                               Margin="0,8,0,0"
                               Foreground="#666"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>

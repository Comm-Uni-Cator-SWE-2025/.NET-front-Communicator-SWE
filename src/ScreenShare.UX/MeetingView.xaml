<UserControl x:Class="ScreenShare.UX.MeetingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenShare.UX"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer Grid.Row="1" 
              x:Name="ParticipantsScrollViewer"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="ParticipantsItemsControl" 
                  ItemsSource="{Binding Participants}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid x:Name="ParticipantUniformGrid" 
                           Rows="1" 
                           Columns="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#E8E4DD" 
                        BorderBrush="#D0CCC4" 
                        BorderThickness="1"
                        MinHeight="200">
                            <controls:ParticipantControl 
                        Initial="{Binding Initial}" 
                        Username="{Binding Username}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

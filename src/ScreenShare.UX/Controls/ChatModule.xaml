<UserControl x:Class="ScreenShare.UX.Controls.ChatModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenShare.UX.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Chat Header -->
        <Border Grid.Row="0" Background="#E8E4DD" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC">
            <TextBlock Text="Chat" FontSize="16" FontWeight="Bold"/>
        </Border>

        <!-- Chat Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="Chat Module" FontSize="14" Foreground="#999999" TextAlignment="Center" Margin="0,50,0,5"/>
                <TextBlock Text="To be implemented by Chat Team" FontSize="12" Foreground="#AAAAAA" TextAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

<UserControl x:Class="ScreenShare.UX.Controls.ControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenShare.UX.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Border Background="#F5F5F5" Padding="10" BorderThickness="0,1,0,0" BorderBrush="#CCCCCC">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Mute" Width="80" Height="35" Margin="5"/>
            <Button Content="Camera" Width="80" Height="35" Margin="5"/>
            <Button Content="Share" Width="80" Height="35" Margin="5"/>
            <Button Content="Leave" Width="80" Height="35" Margin="5" Background="#DC3545" Foreground="White"/>
        </StackPanel>
    </Border>
</UserControl>

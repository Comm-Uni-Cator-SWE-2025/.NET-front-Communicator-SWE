<UserControl x:Class="ScreenShare.UX.Controls.ParticipantControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenShare.UX.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="120">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Circle with Initial -->
            <Border Width="100" Height="100" 
                    CornerRadius="50" 
                    Background="White"
                    HorizontalAlignment="Center">
                <TextBlock x:Name="InitialTextBlock"
                          Text="Y" 
                          FontSize="48" 
                          FontWeight="Bold"
                          Foreground="Black"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
            </Border>
            
            <!-- Username below circle -->
            <TextBlock x:Name="UsernameTextBlock"
                      Text="You" 
                      FontSize="14" 
                      Foreground="#333333"
                      HorizontalAlignment="Center" 
                      Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>

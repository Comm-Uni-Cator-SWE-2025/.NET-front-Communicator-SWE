<UserControl x:Class="Communicator.UX.Canvas.CanvasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icons="clr-namespace:Communicator.Icons;assembly=Communicator.Icons" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900"
             Focusable="True" 
             MouseDown="UserControl_MouseDown">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToolButtonWithLabel" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource IconBrush}"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}">
                                <ContentPresenter Margin="0,2,0,4" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ToolTip, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontSize="10" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ColorPaletteButton" TargetType="Button">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource TextPrimaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="icons:Icon">
            <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource AppBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,0,1,0" 
                Width="250"
                Padding="10"
                Visibility="{Binding IsAnalysisVisible, Converter={StaticResource BoolToVis}}">
            <StackPanel>
                <TextBlock Text="Canvas Analysis" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBox Text="{Binding AnalysisResult, Mode=OneWay}" 
                         IsReadOnly="True" 
                         Height="300" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         BorderBrush="{DynamicResource BorderBrush}"
                         Padding="5"/>
                <Button Content="Close" Margin="0,10,0,0" Click="BtnCloseAnalysis_Click" Padding="5"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="8,4">

                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Visibility="{Binding IsHost, Converter={StaticResource BoolToVis}}">
                            <Button x:Name="BtnSave" Style="{StaticResource ToolButtonWithLabel}" Click="BtnSave_Click" ToolTip="Save">
                                <icons:Icon IconName="device-floppy" IconSize="18" />
                            </Button>
                            <Button x:Name="BtnRestore" Style="{StaticResource ToolButtonWithLabel}" Click="BtnRestore_Click" ToolTip="Restore">
                                <icons:Icon IconName="restore" IconSize="18" />
                            </Button>
                        </StackPanel>

                        <Button x:Name="BtnSelect" Style="{StaticResource ToolButtonWithLabel}" Click="BtnSelect_Click" ToolTip="Select">
                            <icons:Icon IconName="select" IconSize="18" />
                        </Button>
                        <Button x:Name="BtnFreehand" Style="{StaticResource ToolButtonWithLabel}" Click="BtnFreehand_Click" ToolTip="Freehand">
                            <icons:Icon IconName="pencil" IconSize="18" />
                        </Button>
                        <Button x:Name="BtnLine" Style="{StaticResource ToolButtonWithLabel}" Click="BtnLine_Click" ToolTip="Line">
                            <icons:Icon IconName="slash" IconSize="18" />
                        </Button>
                        <Button x:Name="BtnRectangle" Style="{StaticResource ToolButtonWithLabel}" Click="BtnRectangle_Click" ToolTip="Rectangle">
                            <icons:Icon IconName="rectangle" IconSize="18" />
                        </Button>
                        <Button x:Name="BtnEllipse" Style="{StaticResource ToolButtonWithLabel}" Click="BtnEllipse_Click" ToolTip="Ellipse">
                            <icons:Icon IconName="circle" IconSize="18" />
                        </Button>
                        <Button x:Name="BtnTriangle" Style="{StaticResource ToolButtonWithLabel}" Click="BtnTriangle_Click" ToolTip="Triangle">
                            <icons:Icon IconName="triangle" IconSize="18" />
                        </Button>
                    </StackPanel>

                    <Separator Grid.Column="1" Margin="4,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnRegularize" Style="{StaticResource ToolButtonWithLabel}" Click="BtnRegularize_Click" ToolTip="Regularize">
                            <icons:Icon IconName="wand" IconSize="18" />
                        </Button>
                        <Button x:Name="BtnAnalyze" Style="{StaticResource ToolButtonWithLabel}" Click="BtnAnalyze_Click" ToolTip="Analyze">
                            <icons:Icon IconName="search" IconSize="18" />
                        </Button>
                        <Button x:Name="BtnSnapshot" Style="{StaticResource ToolButtonWithLabel}" Click="BtnSnapshot_Click" ToolTip="Snapshot">
                            <icons:Icon IconName="camera" IconSize="18" />
                        </Button>
                    </StackPanel>

                    <Separator Grid.Column="3" Margin="4,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>

                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="4,0,8,0">
                            <TextBlock Text="Thickness" FontSize="9" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                            <Slider x:Name="ThicknessSlider" Style="{DynamicResource SliderStyle}" Width="100" Minimum="1" Maximum="20" Value="{Binding CurrentThickness, Mode=TwoWay}" TickFrequency="0.1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft"/>
                        </StackPanel>

                        <Button x:Name="CurrentColorButton" Width="28" Height="28" Margin="0,0,4,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Click="CurrentColorButton_Click" Cursor="Hand" ToolTip="Select Color">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" SnapsToDevicePixels="True"/>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Popup x:Name="ColorPopup" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=CurrentColorButton}" AllowsTransparency="True" PopupAnimation="Fade">
                            <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Margin="4" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.3" BlurRadius="5"/>
                                </Border.Effect>
                                <WrapPanel Width="120">
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FF0000" Click="ColorButton_Click" ToolTip="Red" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#008000" Click="ColorButton_Click" ToolTip="Green" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#0000FF" Click="ColorButton_Click" ToolTip="Blue" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#000000" Click="ColorButton_Click" ToolTip="Black" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FFFF00" Click="ColorButton_Click" ToolTip="Yellow" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FFA500" Click="ColorButton_Click" ToolTip="Orange" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#800080" Click="ColorButton_Click" ToolTip="Purple" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#A52A2A" Click="ColorButton_Click" ToolTip="Brown" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FFFFFF" Click="ColorButton_Click" ToolTip="White" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#808080" Click="ColorButton_Click" ToolTip="Gray" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FFC0CB" Click="ColorButton_Click" ToolTip="Pink" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#00FFFF" Click="ColorButton_Click" ToolTip="Cyan" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#E6E6FA" Click="ColorButton_Click" ToolTip="Lavender" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#F5F5DC" Click="ColorButton_Click" ToolTip="Beige" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#008080" Click="ColorButton_Click" ToolTip="Teal" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FF00FF" Click="ColorButton_Click" ToolTip="Magenta" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#800000" Click="ColorButton_Click" ToolTip="Maroon" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#000080" Click="ColorButton_Click" ToolTip="Navy" />
                                </WrapPanel>
                            </Border>
                        </Popup>

                        <Button x:Name="BtnDelete" Style="{StaticResource ToolbarButton}" Click="BtnDelete_Click" ToolTip="Delete (Del)">
                            <icons:Icon IconName="trash" IconSize="18" Foreground="{DynamicResource IconBrush}" />
                        </Button>

                        <Button x:Name="BtnUndo" Style="{StaticResource ToolbarButton}" Click="BtnUndo_Click" ToolTip="Undo (Ctrl+Z)">
                            <icons:Icon IconName="arrow-back-up" IconSize="18" Foreground="{DynamicResource IconBrush}" />
                        </Button>
                        <Button x:Name="BtnRedo" Style="{StaticResource ToolbarButton}" Click="BtnRedo_Click" ToolTip="Redo (Ctrl+Y)">
                            <icons:Icon IconName="arrow-forward-up" IconSize="18" Foreground="{DynamicResource IconBrush}" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="2" Margin="10" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                <!-- ADDED ClipToBounds="True" AND Explicit Width/Height to DrawArea -->
                <Border x:Name="CanvasBorder" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="White" 
                        Width="1600" Height="900" VerticalAlignment="Center" HorizontalAlignment="Center"
                        ClipToBounds="True">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1" />
                            <TranslateTransform x:Name="CanvasTranslateTransform" X="0" Y="0" />
                        </TransformGroup>
                    </Border.RenderTransform>
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" Color="Black" Opacity="0.3" BlurRadius="10"/>
                    </Border.Effect>

                    <!-- Explicit Width/Height ensures vm.CanvasBounds calculates correctly -->
                    <Canvas x:Name="DrawArea" Width="1600" Height="900" Background="Transparent"/>
                </Border>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
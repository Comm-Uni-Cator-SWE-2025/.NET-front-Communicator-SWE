<UserControl x:Class="Communicator.UX.Canvas.CanvasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900"
             Focusable="True" 
             MouseDown="UserControl_MouseDown">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFDCE0E5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFC9CED3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToolButtonWithLabel" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter Margin="0,2,0,4"/>
                                <TextBlock Text="{Binding ToolTip, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontSize="10" Foreground="#555" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFDCE0E5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFC9CED3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ColorPaletteButton" TargetType="Button">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#888"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFE0E0E0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Background="#F0F0F0" 
                BorderBrush="#CCC" 
                BorderThickness="0,0,1,0" 
                Width="250"
                Padding="10"
                Visibility="{Binding IsAnalysisVisible, Converter={StaticResource BoolToVis}}">
            <StackPanel>
                <TextBlock Text="Canvas Analysis" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBox Text="{Binding AnalysisResult, Mode=OneWay}" 
                         IsReadOnly="True" 
                         Height="300" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         Background="White"
                         Padding="5"/>
                <Button Content="Close" Margin="0,10,0,0" Click="BtnCloseAnalysis_Click" Padding="5"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="HeaderLabel" Grid.Row="0" FontWeight="Bold" Padding="5" Background="#DDD"/>

            <Border Grid.Row="1"
                    Background="#FFF3F4F6" 
                    BorderBrush="#FFDDDDDD"
                    BorderThickness="0,0,0,1"
                    Padding="8,4">

                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Visibility="{Binding IsHost, Converter={StaticResource BoolToVis}}">
                            <Button x:Name="BtnSave" Style="{StaticResource ToolButtonWithLabel}" Click="BtnSave_Click" ToolTip="Save">
                                <Viewbox Width="18" Height="18">
                                    <Path Fill="#333" Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z" />
                                </Viewbox>
                            </Button>
                            <Button x:Name="BtnRestore" Style="{StaticResource ToolButtonWithLabel}" Click="BtnRestore_Click" ToolTip="Restore">
                                <Viewbox Width="18" Height="18">
                                    <Path Fill="#333" Data="M13,3A9,9 0 0,0 4,12H1L4.89,15.89L4.96,16.03L9,12H6A7,7 0 0,1 13,5A7,7 0 0,1 20,12A7,7 0 0,1 13,19C11.07,19 9.32,18.21 8.06,16.94L6.64,18.36C8.27,20 10.5,21 13,21A9,9 0 0,0 22,12A9,9 0 0,0 13,3Z" />
                                </Viewbox>
                            </Button>
                        </StackPanel>

                        <Button x:Name="BtnSelect" Style="{StaticResource ToolButtonWithLabel}" Click="BtnSelect_Click" ToolTip="Select">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M14.6,11L18.4,12L12.4,18L8.7,17.1L10.3,13.8L4.3,7.8L5.2,4L11.2,10L14.6,11M13,0L21,3.2L15,10.7L19.2,22L12.3,18.7L8,19.3L0,12L13,0Z" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="BtnFreehand" Style="{StaticResource ToolButtonWithLabel}" Click="BtnFreehand_Click" ToolTip="Freehand">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C17.98,2.9 17.35,2.9 16.96,3.29L15.13,5.12L18.88,8.87M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25Z" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="BtnLine" Style="{StaticResource ToolButtonWithLabel}" Click="BtnLine_Click" ToolTip="Line">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M20.71,3.29L3.29,20.71C2.9,21.1 2.27,21.1 1.88,20.71C1.49,20.32 1.49,19.69 1.88,19.3L19.3,1.88C19.69,1.49 20.32,1.49 20.71,1.88C21.1,2.27 21.1,2.9 20.71,3.29Z" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="BtnRectangle" Style="{StaticResource ToolButtonWithLabel}" Click="BtnRectangle_Click" ToolTip="Rectangle">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M4,6V18H20V6H4M6,8H18V16H6V8Z" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="BtnEllipse" Style="{StaticResource ToolButtonWithLabel}" Click="BtnEllipse_Click" ToolTip="Ellipse">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4Z" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="BtnTriangle" Style="{StaticResource ToolButtonWithLabel}" Click="BtnTriangle_Click" ToolTip="Triangle">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M1,21H23L12,2L1,21M12,4.6L19.5,19H4.5L12,4.6Z" />
                            </Viewbox>
                        </Button>
                    </StackPanel>

                    <Separator Grid.Column="1" Margin="4,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnRegularize" Style="{StaticResource ToolButtonWithLabel}" Click="BtnRegularize_Click" ToolTip="Regularize">
                            <StackPanel>
                                <TextBlock Text="⚡" FontSize="14" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnAnalyze" Style="{StaticResource ToolButtonWithLabel}" Click="BtnAnalyze_Click" ToolTip="Analyze Canvas">
                            <StackPanel>
                                <TextBlock Text="🔍" FontSize="14" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnSnapshot" Style="{StaticResource ToolButtonWithLabel}" Click="BtnSnapshot_Click" ToolTip="Snapshot">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M4,4H7L9,2H15L17,4H20A2,2 0 0,1 22,6V18A2,2 0 0,1 20,20H4A2,2 0 0,1 4,4M12,7A5,5 0 0,0 7,12A5,5 0 0,0 12,17A5,5 0 0,0 17,12A5,5 0 0,0 12,7M12,9A3,3 0 0,1 15,12A3,3 0 0,1 12,15A3,3 0 0,1 9,12A3,3 0 0,1 12,9Z" />
                            </Viewbox>
                        </Button>
                    </StackPanel>

                    <Separator Grid.Column="3" Margin="4,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>

                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="4,0,8,0">
                            <TextBlock Text="Thickness" FontSize="9" Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                            <Slider x:Name="ThicknessSlider" Width="100" Minimum="1" Maximum="20" Value="{Binding CurrentThickness, Mode=TwoWay}" TickFrequency="0.1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft"/>
                        </StackPanel>

                        <Button x:Name="CurrentColorButton" Width="28" Height="28" Margin="0,0,4,0" BorderBrush="#888" BorderThickness="1" Click="CurrentColorButton_Click" Cursor="Hand" ToolTip="Select Color">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" SnapsToDevicePixels="True"/>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Popup x:Name="ColorPopup" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=CurrentColorButton}" AllowsTransparency="True" PopupAnimation="Fade">
                            <Border Background="White" BorderBrush="#AAA" BorderThickness="1" CornerRadius="8" Margin="4" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.3" BlurRadius="5"/>
                                </Border.Effect>
                                <WrapPanel Width="120">
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FF0000" Click="ColorButton_Click" ToolTip="Red" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#008000" Click="ColorButton_Click" ToolTip="Green" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#0000FF" Click="ColorButton_Click" ToolTip="Blue" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#000000" Click="ColorButton_Click" ToolTip="Black" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FFFF00" Click="ColorButton_Click" ToolTip="Yellow" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FFA500" Click="ColorButton_Click" ToolTip="Orange" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#800080" Click="ColorButton_Click" ToolTip="Purple" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#A52A2A" Click="ColorButton_Click" ToolTip="Brown" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FFFFFF" Click="ColorButton_Click" ToolTip="White" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#808080" Click="ColorButton_Click" ToolTip="Gray" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FFC0CB" Click="ColorButton_Click" ToolTip="Pink" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#00FFFF" Click="ColorButton_Click" ToolTip="Cyan" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#E6E6FA" Click="ColorButton_Click" ToolTip="Lavender" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#F5F5DC" Click="ColorButton_Click" ToolTip="Beige" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#008080" Click="ColorButton_Click" ToolTip="Teal" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#FF00FF" Click="ColorButton_Click" ToolTip="Magenta" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#800000" Click="ColorButton_Click" ToolTip="Maroon" />
                                    <Button Style="{StaticResource ColorPaletteButton}" Background="#000080" Click="ColorButton_Click" ToolTip="Navy" />
                                </WrapPanel>
                            </Border>
                        </Popup>

                        <Button x:Name="BtnDelete" Style="{StaticResource ToolbarButton}" Click="BtnDelete_Click" ToolTip="Delete (Del)">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" />
                            </Viewbox>
                        </Button>

                        <Button x:Name="BtnUndo" Style="{StaticResource ToolbarButton}" Click="BtnUndo_Click" ToolTip="Undo (Ctrl+Z)">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M12.5,8C9.85,8 7.45,9 5.6,10.6L2,7V16H11L7.38,12.38C8.77,11.22 10.54,10.5 12.5,10.5C16.04,10.5 19.05,12.71 20.1,16L22.47,15.2C21.07,10.8 17.15,8 12.5,8Z" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="BtnRedo" Style="{StaticResource ToolbarButton}" Click="BtnRedo_Click" ToolTip="Redo (Ctrl+Y)">
                            <Viewbox Width="18" Height="18">
                                <Path Fill="#333" Data="M11.5,8C14.15,8 16.55,9 18.4,10.6L22,7V16H13L16.62,12.38C15.23,11.22 13.46,10.5 11.5,10.5C7.96,10.5 4.95,12.71 3.9,16L1.53,15.2C2.93,10.8 6.85,8 11.5,8Z" />
                            </Viewbox>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="2" Margin="10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <!-- ADDED ClipToBounds="True" AND Explicit Width/Height to DrawArea -->
                <Border x:Name="CanvasBorder" BorderBrush="#FF888888" BorderThickness="1" Background="White" 
                        Width="1600" Height="900" VerticalAlignment="Center" HorizontalAlignment="Center"
                        ClipToBounds="True">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1" />
                            <TranslateTransform x:Name="CanvasTranslateTransform" X="0" Y="0" />
                        </TransformGroup>
                    </Border.RenderTransform>
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4" Color="Black" Opacity="0.3" BlurRadius="10"/>
                    </Border.Effect>
                    
                    <!-- Explicit Width/Height ensures vm.CanvasBounds calculates correctly -->
                    <Canvas x:Name="DrawArea" Width="1600" Height="900" Background="Transparent"/>
                </Border>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
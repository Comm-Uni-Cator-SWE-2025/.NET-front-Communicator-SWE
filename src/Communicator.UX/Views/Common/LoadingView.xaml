<Window x:Class="Communicator.UX.Views.Common.LoadingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Communicator" Height="300" Width="500"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ProgressBar IsIndeterminate="{Binding IsBusy}" Width="200" Height="4" Margin="0,0,0,20"
                         Foreground="#007ACC" Background="#333333" BorderThickness="0"/>
            <TextBlock Text="{Binding Message}" HorizontalAlignment="Center" FontSize="16" Foreground="#CCCCCC"/>
        </StackPanel>
    </Grid>
</Window>

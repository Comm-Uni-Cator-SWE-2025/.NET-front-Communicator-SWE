<Window x:Class="Communicator.UX.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:homeViews="clr-namespace:Communicator.UX.Views.Home"
        xmlns:meetingViews="clr-namespace:Communicator.UX.Views.Meeting"
        xmlns:settingsViews="clr-namespace:Communicator.UX.Views.Settings"
        xmlns:commonVm="clr-namespace:Communicator.UX.ViewModels.Common"
        xmlns:mainVm="clr-namespace:Communicator.UX.ViewModels"
        xmlns:commonViews="clr-namespace:Communicator.UX.Views.Common"
        mc:Ignorable="d"
        Title="Comm-Uni-Cate"
        Width="1024"
        Height="640"
        MinWidth="900"
        MinHeight="540"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize">
    <WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="48"
                            CornerRadius="12"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="6"
                            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"
                                              TextElement.Foreground="{TemplateBinding Foreground}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="{DynamicResource HoverOverlayBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="{DynamicResource ActiveOverlayBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="RootBorder" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                        Background="{TemplateBinding Background}"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"
                                      TextElement.Foreground="{TemplateBinding Foreground}" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#E81123" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#C50F1F" />
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="RootBorder" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="{DynamicResource HoverOverlayBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="{DynamicResource ActiveOverlayBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="ChromeBorder"
            Background="{DynamicResource AppBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar"
                  Grid.Row="0"
                  Background="{DynamicResource SurfaceBrush}"
                  MouseLeftButtonDown="OnTitleBarMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="16,6,0,6" VerticalAlignment="Center">
                    <!-- Navigation Buttons -->
                    <Button Content="&#xE72B;"
                            Style="{StaticResource CaptionButtonStyle}"
                            Command="{Binding GoBackCommand}"
                            ToolTip="Go Back"
                            Width="32"
                            Height="32"
                            Margin="0,0,4,0"
                            Visibility="{Binding ShowBackButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" />
                    <Button Content="&#xE72A;"
                            Style="{StaticResource CaptionButtonStyle}"
                            Command="{Binding GoForwardCommand}"
                            ToolTip="Go Forward"
                            Width="32"
                            Height="32"
                            Margin="0,0,16,0"
                            Visibility="{Binding ShowForwardButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" />
                    
                    <Grid VerticalAlignment="Center">
                        <ContentControl Content="{Binding MeetingToolbar}"
                                         VerticalAlignment="Center"
                                         Focusable="False"
                                         IsTabStop="False"
                                         shell:WindowChrome.IsHitTestVisibleInChrome="True"
                                         Visibility="{Binding IsMeetingActive, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <TextBlock Text="Comm-Uni-Cate"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextPrimaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMeetingActive}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Height="48">
            <Button x:Name="AvatarButton"
                Style="{StaticResource CircleButtonStyle}"
                Content="&#xE77B;"
                ToolTip="Profile"
                Margin="0,0,12,0"
                Click="OnAvatarButtonClick"
                shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button.ContextMenu>
                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                <MenuItem Header="{Binding CurrentUserName}" IsEnabled="False"/>
                                <MenuItem Header="{Binding CurrentUserEmail}" IsEnabled="False"/>
                                <Separator />
                                <MenuItem Header="Settings"
                                          Command="{Binding NavigateToSettingsCommand}"
                                          IsEnabled="{Binding IsLoggedIn}"/>
                                <MenuItem Header="Logout"
                                          Command="{Binding LogoutCommand}"
                                          IsEnabled="{Binding IsLoggedIn}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button x:Name="MinimizeButton"
                            Style="{StaticResource CaptionButtonStyle}"
                            Content="&#xE921;"
                            ToolTip="Minimize"
                            Click="OnMinimizeClick"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" Height="48" />
                    <Button x:Name="MaximizeButton"
                            Style="{StaticResource CaptionButtonStyle}"
                            Content="&#xE922;"
                            ToolTip="Maximize"
                            Click="OnMaximizeClick"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" Height="48" />
                    <Button x:Name="CloseButton"
                            Style="{StaticResource CloseButtonStyle}"
                            Content="&#xE8BB;"
                            ToolTip="Close"
                            Click="OnCloseClick"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" Height="48" />
                </StackPanel>
            </Grid>

            <Grid x:Name="ContentHost" Grid.Row="1">
                <ContentControl Content="{Binding CurrentView}"/>
                
                <!-- Toast Container -->
                <ItemsControl x:Name="ToastContainer"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Right"
                              Margin="24,16,24,0"
                              Panel.ZIndex="999"
                              IsHitTestVisible="True">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Loading Overlay -->
                <commonViews:LoadingControl DataContext="{Binding LoadingViewModel}"
                                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Panel.ZIndex="1000"
                                            d:Visibility="Visible"/>
            </Grid>
        </Grid>
    </Border>
</Window>
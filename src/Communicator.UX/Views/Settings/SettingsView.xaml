<UserControl x:Class="GUI.Views.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource AppBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Content -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      Padding="32,24">
            <StackPanel MaxWidth="700" HorizontalAlignment="Left">

                <!-- User Profile Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="24"
                        Margin="0,0,0,24"
                        Effect="{DynamicResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="User Profile"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,20"/>

                        <!-- Avatar and Info -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Border Grid.Column="0"
                                    Width="64"
                                    Height="64"
                                    Background="{DynamicResource PrimaryLightBrush}"
                                    CornerRadius="32"
                                    Margin="0,0,20,0">
                                <TextBlock Text="&#xE77B;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="32"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- User Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DisplayName}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding Email}"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,4"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Appearance Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="24"
                        Margin="0,0,0,24"
                        Effect="{DynamicResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Appearance"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,20"/>

                        <!-- Theme Toggle -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Theme Icon -->
                            <Border Grid.Column="0"
                                    Width="40"
                                    Height="40"
                                    Background="{DynamicResource HoverBackgroundBrush}"
                                    CornerRadius="8"
                                    Margin="0,0,16,0">
                                <TextBlock Text="&#xE793;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="18"
                                           Foreground="{DynamicResource IconBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Theme Label -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Dark Mode"
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,2"/>
                                <TextBlock FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Current theme:"/>
                                    <Run Text="{Binding CurrentThemeText, Mode=OneWay}" FontWeight="Medium"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Toggle Switch -->
                            <CheckBox Grid.Column="2"
                                      IsChecked="{Binding IsDarkMode, Mode=TwoWay}"
                                      VerticalAlignment="Center"
                                      Style="{StaticResource ToggleSwitchStyle}"/>
                        </Grid>

                        <TextBlock Text="Choose between light and dark appearance for the application interface"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

<UserControl x:Class="Communicator.UX.Analytics.Views.MeetAnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Communicator.UX.Analytics.ViewModels"
             Background="{DynamicResource AppBackgroundBrush}">

    <Grid Margin="16">

        <StackPanel Orientation="Vertical">

            <!-- Title -->
            <TextBlock Text="Meet Analytics Dashboard"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0 0 0 20"/>

            <!-- Users Present Card -->
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="10" Padding="20" Margin="0 0 0 15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Users Present"
                               FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding MeetStats.UsersPresent}"
                               FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Users Logged Out Card -->
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="10" Padding="20" Margin="0 0 0 15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Users Logged Out"
                               FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding MeetStats.UsersLoggedOut}"
                               FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource ErrorBrush}"/>
                </StackPanel>
            </Border>

            <!-- Previous Meeting Summary -->
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.05" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Previous Meeting Summary"
                               FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding MeetStats.PreviousSummary}"
                               TextWrapping="Wrap"
                               FontSize="16"
                               Margin="0,8,0,0"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>

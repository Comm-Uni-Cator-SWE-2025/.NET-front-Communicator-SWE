<UserControl x:Class="Communicator.UX.Analytics.Views.AnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Background="#FAFAFA">

    <UserControl.Resources>

        <!-- Card-style panels -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title text -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- GRAPH 1 -->
        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="AI GRAPH" Style="{StaticResource TitleStyle}"/>

                <wpf:CartesianChart
                    Grid.Row="1"
                    Series="{Binding Graph1_AI.Series}"
                    XAxes="{Binding Graph1_AI.XAxes}"
                    YAxes="{Binding Graph1_AI.YAxes}"
                    ZoomMode="X"/>
            </Grid>
        </Border>

        <!-- GRAPH 2 -->
        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="CANVAS DRAWING GRAPH" Style="{StaticResource TitleStyle}"/>

                <wpf:CartesianChart
                    Grid.Row="1"
                    Series="{Binding Graph2_Canvas.Series}"
                    XAxes="{Binding Graph2_Canvas.XAxes}"
                    YAxes="{Binding Graph2_Canvas.YAxes}"/>

                <!-- Legend -->
                <Border Background="#F2F2F2"
                        CornerRadius="8"
                        Padding="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="10">
                    <StackPanel>
                        <TextBlock Text="Legend" FontSize="16" FontWeight="Bold" Margin="0 0 0 8"/>
                        <TextBlock Text="■ FreeHand" Foreground="LightSkyBlue"/>
                        <TextBlock Text="■ Straight Line" Foreground="Brown"/>
                        <TextBlock Text="■ Rectangle" Foreground="Green"/>
                        <TextBlock Text="■ Ellipse" Foreground="Blue"/>
                        <TextBlock Text="■ Triangle" Foreground="BlueViolet"/>
                    </StackPanel>
                </Border>

            </Grid>
        </Border>

        <!-- MESSAGE LIST -->
        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="AI MESSAGES" Style="{StaticResource TitleStyle}"/>
                <ListBox x:Name="AI_Message" TextBlock.FontFamily="Microsoft Yi Baiti"
                         Grid.Row="1" Grid.Column="0"
                         ItemsSource="{Binding MessageList}" 
                         FontSize="16"
                         Background="#F7F7F7" 
                         BorderBrush="Gray" 
                         BorderThickness="1" 
                         Padding="10"/>
            </Grid>
        </Border>

        <!-- SCREEN SHARE -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="SCREENSHARE GRAPH" Style="{StaticResource TitleStyle}"/>

                <wpf:CartesianChart
                    Grid.Row="1"
                    Series="{Binding Graph4_Screen.Series}"
                    XAxes="{Binding  Graph4_Screen.XAxes}"
                    YAxes="{Binding  Graph4_Screen.YAxes}"
                    ZoomMode="X"/>
            </Grid>
        </Border>

    </Grid>

</UserControl>

<Application x:Class="Communicator.App.MainApp" x:ClassModifier="public"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:authVm="clr-namespace:Communicator.App.ViewModels.Auth"
             xmlns:authViews="clr-namespace:Communicator.App.Views.Auth"
             xmlns:homeVm="clr-namespace:Communicator.App.ViewModels.Home"
             xmlns:meetingVm="clr-namespace:Communicator.App.ViewModels.Meeting"
             xmlns:settingsVm="clr-namespace:Communicator.App.ViewModels.Settings"
             xmlns:homeViews="clr-namespace:Communicator.App.Views.Home"
             xmlns:meetingViews="clr-namespace:Communicator.App.Views.Meeting"
             xmlns:settingsViews="clr-namespace:Communicator.App.Views.Settings"
             xmlns:analyticsVm="clr-namespace:Communicator.UX.Analytics.ViewModels;assembly=Communicator.UX.Analytics"
             xmlns:analyticsViews="clr-namespace:Communicator.UX.Analytics.Views;assembly=Communicator.UX.Analytics"
             xmlns:canvasVm="clr-namespace:Communicator.UX.Canvas.ViewModels;assembly=Communicator.UX.Canvas"
             xmlns:canvasViews="clr-namespace:Communicator.UX.Canvas;assembly=Communicator.UX.Canvas"
             xmlns:converters="clr-namespace:Communicator.UX.Core.Converters;assembly=Communicator.UX.Core">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme Resources - LightTheme loaded by default, dynamically switched by ThemeService -->
                <ResourceDictionary Source="/Communicator.UX.Core;component/Themes/LightTheme.xaml"/>
                
                <!-- Control Styles -->
                <ResourceDictionary Source="/Communicator.UX.Core;component/Styles/ControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            
            <!-- Data Template for Auth View (Google OAuth only) -->
            <DataTemplate DataType="{x:Type authVm:AuthViewModel}">
                <authViews:AuthView />
            </DataTemplate>
            
            <!-- Data Templates for Application Views -->
            <DataTemplate DataType="{x:Type homeVm:HomePageViewModel}">
                <homeViews:HomePageView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type settingsVm:SettingsViewModel}">
                <settingsViews:SettingsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:MeetingToolbarViewModel}">
                <meetingViews:MeetingToolbarView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:MeetingSessionViewModel}">
                <meetingViews:MeetingSessionView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:VideoSessionViewModel}">
                <meetingViews:VideoSessionView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:ScreenShareViewModel}">
                <meetingViews:ScreenShareView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type canvasVm:CanvasViewModel}">
                <canvasViews:CanvasView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type canvasVm:HostViewModel}">
                <canvasViews:CanvasView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type canvasVm:ClientViewModel}">
                <canvasViews:CanvasView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:ChatViewModel}">
                <meetingViews:ChatView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:ParticipantsListViewModel}">
                <meetingViews:ParticipantsListView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type analyticsVm:AnalyticsViewModel}">
                <analyticsViews:AnalyticsView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>

<UserControl x:Class="Communicator.App.Views.Meeting.MeetingSessionView" x:ClassModifier="public"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="clr-namespace:Communicator.Icons;assembly=Communicator.Icons"
             xmlns:local="clr-namespace:Communicator.App.Views"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="{DynamicResource AppBackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Main content area - takes remaining space -->
            <ColumnDefinition Width="*" MinWidth="600"/>
            <!-- GridSplitter column -->
            <ColumnDefinition Width="Auto" />
            <!-- Side panel column - use star sizing for proper GridSplitter behavior -->
            <ColumnDefinition Width="0" MinWidth="0"/>
        </Grid.ColumnDefinitions>
        
        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Content (Current Tab) -->
        <ContentControl Grid.Row="0"
                        Content="{Binding CurrentPage}"/>

        <!-- Quick Doubt Popup Container - Left Bottom with modern stacking -->
        <ScrollViewer Grid.Row="0"
                      x:Name="QuickDoubtScrollViewer"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      Margin="16,0,0,16"
                      Panel.ZIndex="999"
                      MaxHeight="500"
                      MaxWidth="400"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="QuickDoubtPopupContainer"
                          ItemsSource="{Binding ActiveQuickDoubts}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel VerticalAlignment="Bottom"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:QuickDoubtPopup SenderName="{Binding SenderName}"
                                               Message="{Binding Message}"
                                               Tag="{Binding Id}"
                                               CloseRequested="QuickDoubtPopup_CloseRequested"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom Meeting Control Toolbar -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,10"
                SnapsToDevicePixels="True">
            <Border.Resources>
                <Style x:Key="MeetingControlButtonStyle" TargetType="Button">
                    <Setter Property="Width" Value="80" />
                    <Setter Property="Margin" Value="4,2" />
                    <Setter Property="Padding" Value="0,8" />
                    <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource HoverOverlayBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ActiveOverlayBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Border.Resources>
            
            <!-- Centered StackPanel with fixed-width buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <!-- Leave Meeting -->
                <Button Command="{Binding LeaveMeetingCommand}"
                        AutomationProperties.AutomationId="LeaveMeetingButton"
                        ToolTip="Leave meeting"
                        Style="{StaticResource MeetingControlButtonStyle}">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <icons:Icon IconName="door-exit" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource ErrorBrush}" />
                        <TextBlock Text="Leave"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Toggle Mute -->
                <Button Command="{Binding ToggleMuteCommand}"
                        AutomationProperties.AutomationId="ToggleMuteButton"
                        ToolTip="Toggle microphone"
                        Style="{StaticResource MeetingControlButtonStyle}">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <icons:Icon IconName="microphone" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource IconBrush}"
                                    Visibility="{Binding IsMuted, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                        <icons:Icon IconName="microphone-off" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource ErrorBrush}"
                                    Visibility="{Binding IsMuted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="Audio"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Toggle Camera -->
                <Button Command="{Binding ToggleCameraCommand}"
                        AutomationProperties.AutomationId="ToggleCameraButton"
                        ToolTip="Toggle camera"
                        Style="{StaticResource MeetingControlButtonStyle}">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <icons:Icon IconName="video" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource IconBrush}"
                                    Visibility="{Binding IsCameraOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <icons:Icon IconName="video-off" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource ErrorBrush}"
                                    Visibility="{Binding IsCameraOn, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                        <TextBlock Text="Video"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Toggle Hand with Quick Doubt Bubble -->
                <Grid x:Name="RaiseHandButtonContainer">
                    <!-- Quick Doubt Bubble - positioned above the button -->
                    <Popup IsOpen="{Binding IsQuickDoubtBubbleOpen, Mode=OneWay}"
                           PlacementTarget="{Binding ElementName=RaiseHandButton}"
                           Placement="Top"
                           AllowsTransparency="True"
                           StaysOpen="False"
                           HorizontalOffset="0"
                           VerticalOffset="-20"
                           x:Name="QuickDoubtPopup">
                        <Border x:Name="BubbleBorder"
                                Background="{DynamicResource SurfaceBrush}"
                                BorderBrush="{DynamicResource PrimaryBrush}"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="16"
                                MinWidth="320"
                                MaxWidth="400"
                                RenderTransformOrigin="0.5,1">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                  Opacity="0.3" 
                                                  BlurRadius="20" 
                                                  ShadowDepth="4"/>
                            </Border.Effect>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Scale animation -->
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             From="0.8" To="1" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             From="0.8" To="1" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <!-- Opacity animation -->
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            
                            <StackPanel>
                                <!-- Header -->
                                <TextBlock Text="Quick Doubt"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                                
                                <!-- Show sent message if exists -->
                                <Border Background="{DynamicResource HoverOverlayBrush}"
                                        CornerRadius="8"
                                        Padding="12,8"
                                        Margin="0,0,0,8"
                                        Visibility="{Binding QuickDoubtSentMessage, Converter={StaticResource StringToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="âœ“ Sent to everyone:"
                                                   FontSize="11"
                                                   Opacity="0.7"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding QuickDoubtSentMessage}"
                                                   TextWrapping="Wrap"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Opacity="0.6"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:hh:mm:ss tt}">
                                                    <Binding Path="QuickDoubtTimestamp"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Input TextBox - Only show when no message has been sent -->
                                <TextBox Text="{Binding QuickDoubtMessage, UpdateSourceTrigger=PropertyChanged}"
                                         x:Name="QuickDoubtTextBox"
                                         MinHeight="60"
                                         MaxHeight="120"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="False"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="8"
                                         FontSize="13"
                                         Margin="0,0,0,8"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         CaretBrush="{DynamicResource TextPrimaryBrush}"
                                         Visibility="{Binding QuickDoubtSentMessage, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=True}"
                                         PreviewKeyDown="QuickDoubtTextBox_PreviewKeyDown">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="6">
                                                            <ScrollViewer x:Name="PART_ContentHost"
                                                                          Margin="{TemplateBinding Padding}"
                                                                          VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                
                                <!-- Hint Text - Only show when textbox is visible -->
                                <TextBlock Text="Press Enter to send to everyone"
                                           FontSize="11"
                                           Opacity="0.7"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Visibility="{Binding QuickDoubtSentMessage, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=True}"/>
                                
                                <!-- Lower Hand Action Hint - Show when message is sent -->
                                <TextBlock Text="Lower your hand or click outside to close"
                                           FontSize="11"
                                           Opacity="0.7"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Visibility="{Binding QuickDoubtSentMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                    
                    <!-- Raise Hand Button -->
                <Button x:Name="RaiseHandButton"
                        Command="{Binding ToggleHandCommand}"
                        AutomationProperties.AutomationId="RaiseHandButton"
                        ToolTip="Raise hand"
                        Style="{StaticResource MeetingControlButtonStyle}">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <icons:Icon IconName="hand-stop" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource IconBrush}"
                                    Visibility="{Binding IsHandRaised, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                        <icons:Icon IconName="hand-stop" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource WarningBrush}"
                                    Opacity="0.8"
                                    Visibility="{Binding IsHandRaised, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="Raise"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                </Grid>

                <!-- Toggle Screen Share -->
                <Button Command="{Binding ToggleScreenShareCommand}"
                        AutomationProperties.AutomationId="ToggleScreenShareButton"
                        ToolTip="Toggle screen sharing"
                        Style="{StaticResource MeetingControlButtonStyle}">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <icons:Icon IconName="screen-share" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource IconBrush}"
                                    Visibility="{Binding IsScreenSharing, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                        <icons:Icon IconName="screen-share-off" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource SuccessBrush}"
                                    Visibility="{Binding IsScreenSharing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="Share"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Toggle Chat Panel -->
                <Button Command="{Binding ToggleChatPanelCommand}"
                        AutomationProperties.AutomationId="ToggleChatButton"
                        ToolTip="Toggle chat"
                        Style="{StaticResource MeetingControlButtonStyle}">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <icons:Icon IconName="message-circle" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource IconBrush}"/>
                        <TextBlock Text="Chat"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Toggle Participants Panel (NEW) -->
                <Button Command="{Binding ToggleParticipantsPanelCommand}"
                        AutomationProperties.AutomationId="ToggleParticipantsButton"
                        ToolTip="Toggle participants"
                        Style="{StaticResource MeetingControlButtonStyle}">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <icons:Icon IconName="users" 
                                    IconSize="20" 
                                    Foreground="{DynamicResource IconBrush}"/>
                        <TextBlock Text="People"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>
        </Grid>
        
        <!-- GRID SPLITTER -->
        <GridSplitter Grid.Column="1"
                      Width="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="{DynamicResource SurfaceBrush}"
                      ResizeDirection="Columns"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="False"
                      Cursor="SizeWE"
                      Visibility="{Binding IsSidePanelOpen, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        
        <!-- SIDE PANEL -->
        <Border Grid.Column="2"
                x:Name="SidePanelBorder"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="Transparent"
                BorderThickness="0"
                SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- Side Panel Header -->
                <Border Grid.Row="0"
                        Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="16,12">
                    <Grid>
                        <TextBlock Text="{Binding SidePanelTitle}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        
                        <StackPanel HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            
                            <!-- Close Panel Button -->
                            <Button Command="{Binding CloseSidePanelCommand}"
                                    ToolTip="Close panel"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="8"
                                    Cursor="Hand">
                                <icons:Icon IconName="x" 
                                            IconSize="16" 
                                            Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverOverlayBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ActiveOverlayBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Side Panel Content -->
                <ContentControl Grid.Row="1"
                                Content="{Binding SidePanelContent}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>


<UserControl x:Class="Communicator.App.Views.Meeting.ParticipantsListView" x:ClassModifier="public"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="clr-namespace:Communicator.Icons;assembly=Communicator.Icons"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="300"
             Background="{DynamicResource AppBackgroundBrush}">
    <!-- Participants List - No header since side panel provides it -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding Participants}"
                      Padding="8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent"
                                Padding="8,6"
                                Margin="0,2">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource HoverOverlayBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Grid Grid.Column="0"
                                      Width="40"
                                      Height="40"
                                      Margin="0,0,12,0">
                                    <!-- Profile Image -->
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding ProfileImageUri, TargetNullValue={x:Null}, FallbackValue={x:Null}}"
                                                        Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <!-- Fallback: Initial Circle -->
                                    <Border CornerRadius="20"
                                            Background="{DynamicResource AccentBrush}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ProfileImageUri}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Initial}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>

                                <!-- Name and Status -->
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding User.Role}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Status Icons -->
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            Margin="8,0,0,0">
                                    <!-- Hand Raised -->
                                    <icons:Icon IconName="hand-paper"
                                                IconSize="16"
                                                Foreground="{DynamicResource WarningBrush}"
                                                Margin="4,0"
                                                ToolTip="Hand raised">
                                        <icons:Icon.Style>
                                            <Style TargetType="icons:Icon">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsHandRaised}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </icons:Icon.Style>
                                    </icons:Icon>

                                    <!-- Screen Sharing -->
                                    <icons:Icon IconName="monitor"
                                                IconSize="16"
                                                Foreground="{DynamicResource SuccessBrush}"
                                                Margin="4,0"
                                                ToolTip="Screen sharing">
                                        <icons:Icon.Style>
                                            <Style TargetType="icons:Icon">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsScreenSharing}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </icons:Icon.Style>
                                    </icons:Icon>

                                    <!-- Microphone Muted -->
                                    <icons:Icon IconName="microphone-off"
                                                IconSize="16"
                                                Foreground="{DynamicResource ErrorBrush}"
                                                Margin="4,0"
                                                ToolTip="Muted">
                                        <icons:Icon.Style>
                                            <Style TargetType="icons:Icon">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </icons:Icon.Style>
                                    </icons:Icon>

                                    <!-- Camera Off -->
                                    <icons:Icon IconName="video-off"
                                                IconSize="16"
                                                Foreground="{DynamicResource ErrorBrush}"
                                                Margin="4,0"
                                                ToolTip="Camera off">
                                        <icons:Icon.Style>
                                            <Style TargetType="icons:Icon">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCameraOn}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </icons:Icon.Style>
                                    </icons:Icon>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
    </ScrollViewer>
</UserControl>


<UserControl x:Class="Communicator.App.Views.Home.HomePageView" x:ClassModifier="public"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icons="clr-namespace:Communicator.Icons;assembly=Communicator.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource AppBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="48,32,48,24">
            <!-- Date -->
            <TextBlock Text="{Binding CurrentTime}" 
                       FontSize="16" 
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       FontWeight="Medium"
                       Margin="0,0,0,12"/>
            
            <!-- Welcome Message -->
            <TextBlock FontSize="36" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,8">
                <Run Text="Welcome, "/>
                <Run Text="{Binding WelcomeMessage, Mode=OneWay}"/>
            </TextBlock>
            
            <!-- Subheading -->
            <TextBlock Text="{Binding SubHeading}" 
                       FontSize="16" 
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       TextWrapping="Wrap"
                       MaxWidth="600"
                       HorizontalAlignment="Left"
                       LineHeight="24"/>
        </StackPanel>

        <!-- Main Content Area with responsive width constraints -->
        <Grid Grid.Row="1" Margin="48,0,48,48">
            <!-- Use StackPanel with MaxWidth for responsive layout -->
            <StackPanel VerticalAlignment="Top" MaxWidth="700" HorizontalAlignment="Stretch">
                
                <!-- Meeting Link Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                        CornerRadius="12" 
                        Padding="32"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderBrush}"
                        Effect="{DynamicResource CardShadow}">
                    
                    <StackPanel>
                        <!-- Section Title -->
                        <TextBlock Text="Enter Meeting Link" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <!-- TextBox for Meeting Link -->
                        <TextBox x:Name="MeetingLinkTextBox"
                                 Text="{Binding MeetingLink, UpdateSourceTrigger=PropertyChanged}"
                                 Height="48"
                                 FontSize="15"
                                 Margin="0,0,0,20" />
                        
                        <!-- Buttons Grid -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Join Meeting Button -->
                            <Button Grid.Column="0"
                                    Command="{Binding JoinMeetingCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Height="48">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <icons:Icon IconName="arrow-autofit-right-filled" 
                                                IconSize="16" 
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="Join Meeting" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Create Meeting Button -->
                            <Button Grid.Column="2"
                                    Command="{Binding CreateMeetingCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Height="48">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <icons:Icon IconName="plus" 
                                                IconSize="16" 
                                                Foreground="{DynamicResource TextOnPrimaryBrush}"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="Create Meeting" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>


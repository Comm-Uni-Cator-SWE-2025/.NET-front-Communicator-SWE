<UserControl x:Class="GUI.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel MaxWidth="420" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="48">
                <TextBlock Text="Create Account" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />
                <TextBlock Text="Use your IIT Palakkad Academic Email to Sign Up"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,10,0,24" />

                <TextBlock Text="Display Name" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,8" />
                <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,20"
                         Height="44"
                         HorizontalAlignment="Stretch" />

                <TextBlock Text="Email" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,8" />
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,20"
                         Height="44"
                         HorizontalAlignment="Stretch" />

                <TextBlock Text="Password" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,8" />
                <PasswordBox x:Name="PasswordBox"
                             Margin="0,0,0,20"
                             Height="44"
                             PasswordChanged="PasswordBox_PasswordChanged" />

                <TextBlock Text="Confirm Password" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,8" />
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Margin="0,0,0,28"
                             Height="44"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged" />

                <Button Content="Create Account"
                        Command="{Binding SignUpCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="44"
                        Margin="0,0,0,12"
                        HorizontalAlignment="Stretch" />
                <Button Content="Sign In with Google"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Height="44"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Stretch" />
                <Button Content="Already have an account? Login here"
                        Command="{Binding GoToLoginCommand}"
                        Height="44"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource PrimaryBrush}"
                        Cursor="Hand"
                        FontWeight="Medium" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

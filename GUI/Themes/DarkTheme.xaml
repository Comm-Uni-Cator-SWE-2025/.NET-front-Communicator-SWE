<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DARK THEME COLOR PALETTE -->
    <!-- Following modern dark mode principles with Blue as primary branding color -->
    
    <!-- Primary Brand Color (Blue) - Slightly brighter for dark mode -->
    <Color x:Key="PrimaryColor">#60A5FA</Color>
    <Color x:Key="PrimaryHoverColor">#3B82F6</Color>
    <Color x:Key="PrimaryPressedColor">#2563EB</Color>
    <Color x:Key="PrimaryLightColor">#1E3A8A</Color>
    
    <!-- Success Color (Green) -->
    <Color x:Key="SuccessColor">#34D399</Color>
    <Color x:Key="SuccessHoverColor">#10B981</Color>
    
    <!-- Error Color (Red) -->
    <Color x:Key="ErrorColor">#F87171</Color>
    <Color x:Key="ErrorHoverColor">#EF4444</Color>
    
    <!-- Warning Color (Orange/Amber) -->
    <Color x:Key="WarningColor">#FBBF24</Color>
    <Color x:Key="WarningHoverColor">#F59E0B</Color>
    
    <!-- Background Colors -->
    <Color x:Key="AppBackgroundColor">#0F172A</Color>
    <Color x:Key="SurfaceColor">#1E293B</Color>
    <Color x:Key="CardBackgroundColor">#1E293B</Color>
    <Color x:Key="HoverBackgroundColor">#334155</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#F1F5F9</Color>
    <Color x:Key="TextSecondaryColor">#CBD5E1</Color>
    <Color x:Key="TextTertiaryColor">#94A3B8</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#334155</Color>
    <Color x:Key="BorderHoverColor">#475569</Color>
    <Color x:Key="BorderFocusColor">#60A5FA</Color>
    
    <!-- Overlay Colors for Hover/Active States -->
    <Color x:Key="HoverOverlayColor">#1AFFFFFF</Color>
    <Color x:Key="ActiveOverlayColor">#26FFFFFF</Color>
    
    <!-- Icon Colors -->
    <Color x:Key="IconColor">#94A3B8</Color>
    <Color x:Key="IconActiveColor">#60A5FA</Color>
    
    <!-- Convert Colors to Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryPressedColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="{StaticResource SuccessHoverColor}"/>
    
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ErrorHoverBrush" Color="{StaticResource ErrorHoverColor}"/>
    
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="{StaticResource WarningHoverColor}"/>
    
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHoverColor}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource BorderFocusColor}"/>
    
    <SolidColorBrush x:Key="HoverOverlayBrush" Color="{StaticResource HoverOverlayColor}"/>
    <SolidColorBrush x:Key="ActiveOverlayBrush" Color="{StaticResource ActiveOverlayColor}"/>
    
    <SolidColorBrush x:Key="IconBrush" Color="{StaticResource IconColor}"/>
    <SolidColorBrush x:Key="IconActiveBrush" Color="{StaticResource IconActiveColor}"/>
    
    <!-- Shadow Effect - Lighter for dark mode -->
    <DropShadowEffect x:Key="CardShadow" 
                      Color="#000000" 
                      Opacity="0.3" 
                      BlurRadius="20" 
                      ShadowDepth="0"/>
    
    <DropShadowEffect x:Key="ElevatedShadow" 
                      Color="#000000" 
                      Opacity="0.4" 
                      BlurRadius="24" 
                      ShadowDepth="4"/>

</ResourceDictionary>

<Application x:Class="GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:authVm="clr-namespace:GUI.ViewModels.Auth"
             xmlns:homeVm="clr-namespace:GUI.ViewModels.Home"
             xmlns:meetingVm="clr-namespace:GUI.ViewModels.Meeting"
             xmlns:settingsVm="clr-namespace:GUI.ViewModels.Settings"
             xmlns:authViews="clr-namespace:GUI.Views.Auth"
             xmlns:homeViews="clr-namespace:GUI.Views.Home"
             xmlns:meetingViews="clr-namespace:GUI.Views.Meeting"
             xmlns:settingsViews="clr-namespace:GUI.Views.Settings"
             xmlns:converters="clr-namespace:GUI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme Resources - LightTheme loaded by default, dynamically switched by ThemeService -->
                <ResourceDictionary Source="/Themes/LightTheme.xaml"/>
                
                <!-- Control Styles -->
                <ResourceDictionary Source="/Styles/ControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            
            <!-- Data Templates for Views -->
            <DataTemplate DataType="{x:Type authVm:AuthViewModel}">
                <authViews:AuthView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type authVm:LoginViewModel}">
                <authViews:LoginView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type authVm:SignUpViewModel}">
                <authViews:SignUpView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type homeVm:HomePageViewModel}">
                <homeViews:HomePageView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type settingsVm:SettingsViewModel}">
                <settingsViews:SettingsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:MeetingToolbarViewModel}">
                <meetingViews:MeetingToolbarView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:MeetingShellViewModel}">
                <meetingViews:MeetingShellView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:MeetingDashboardViewModel}">
                <meetingViews:MeetingDashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:VideoSessionViewModel}">
                <meetingViews:VideoSessionView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:ScreenShareViewModel}">
                <meetingViews:ScreenShareView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:WhiteboardViewModel}">
                <meetingViews:WhiteboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type meetingVm:MeetingChatViewModel}">
                <meetingViews:MeetingChatView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>